ifndef config
  config=debug
endif
export config

PROJECTS := framework Tut\ 01\ Main

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

framework: 
	@echo "==== Building framework ($(config)) ===="
	@${MAKE} --no-print-directory -C ../framework -f Makefile

Tut\ 01\ Main: framework
	@echo "==== Building Tut 01 Main ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Tut\ 01\ Main.make

clean:
	@${MAKE} --no-print-directory -C ../framework -f Makefile clean
	@${MAKE} --no-print-directory -C . -f Tut\ 01\ Main.make clean

help:

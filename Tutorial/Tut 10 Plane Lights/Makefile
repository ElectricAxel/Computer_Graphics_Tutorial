  config=debug
endif
export config

PROJECTS := framework Tut\ 10\ Vertex\ Point\ Lighting Tut\ 10\ Fragment\ Point\ Lighting Tut\ 10\ Fragment\ Attenuation

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

framework: 
	@echo "==== Building framework ($(config)) ===="
	@${MAKE} --no-print-directory -C ../framework -f Makefile

Tut\ 10\ Vertex\ Point\ Lighting: framework
	@echo "==== Building Tut 10 Vertex Point Lighting ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Tut\ 10\ Vertex\ Point\ Lighting.make

Tut\ 10\ Fragment\ Point\ Lighting: framework
	@echo "==== Building Tut 10 Fragment Point Lighting ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Tut\ 10\ Fragment\ Point\ Lighting.make

Tut\ 10\ Fragment\ Attenuation: framework
	@echo "==== Building Tut 10 Fragment Attenuation ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Tut\ 10\ Fragment\ Attenuation.make

clean:
	@${MAKE} --no-print-directory -C ../framework -f Makefile clean
	@${MAKE} --no-print-directory -C . -f Tut\ 10\ Vertex\ Point\ Lighting.make clean
	@${MAKE} --no-print-directory -C . -f Tut\ 10\ Fragment\ Point\ Lighting.make clean
	@${MAKE} --no-print-directory -C . -f Tut\ 10\ Fragment\ Attenuation.make clean


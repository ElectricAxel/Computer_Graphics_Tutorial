ifndef config
  config=debug
endif
export config

PROJECTS := framework Tut\ 12\ Scene\ Lighting Tut\ 12\ HDR\ Lighting Tut\ 12\ Gamma\ Correction

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

framework: 
	@echo "==== Building framework ($(config)) ===="
	@${MAKE} --no-print-directory -C ../framework -f Makefile

Tut\ 12\ Scene\ Lighting: framework
	@echo "==== Building Tut 12 Scene Lighting ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Tut\ 12\ Scene\ Lighting.make

Tut\ 12\ HDR\ Lighting: framework
	@echo "==== Building Tut 12 HDR Lighting ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Tut\ 12\ HDR\ Lighting.make

Tut\ 12\ Gamma\ Correction: framework
	@echo "==== Building Tut 12 Gamma Correction ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f Tut\ 12\ Gamma\ Correction.make

clean:
	@${MAKE} --no-print-directory -C ../framework -f Makefile clean
	@${MAKE} --no-print-directory -C . -f Tut\ 12\ Scene\ Lighting.make clean
	@${MAKE} --no-print-directory -C . -f Tut\ 12\ HDR\ Lighting.make clean
	@${MAKE} --no-print-directory -C . -f Tut\ 12\ Gamma\ Correction.make clean

